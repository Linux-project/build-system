use strict;
use warnings "all";
use diagnostics;

use YAML;
use Getopt::Long;

require "./scripts/disk.pm";

# path to specification
my $spec = '';

# help and version flags
my $help = '';
my $version = '';

GetOptions(
    "spec=s" => \$spec,
    "help" => \$help,
    "version" => \$version,
) or die("Wrong set of command line arguments were passed\n");

if ($spec eq '') {
    print STDERR "Error: specification must be provided\n";
    exit 1;
}

exit 0;
